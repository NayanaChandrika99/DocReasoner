# Development Environment Configuration Template
# Copy this file to .env for local development

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=reasoning-service
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================================================
# API SERVER
# ============================================================================
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1

# ============================================================================
# DATABASE (Local PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/reasoning_service
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5

# ============================================================================
# REDIS CACHE (Local)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# ============================================================================
# PAGEINDEX API
# ============================================================================
PAGEINDEX_API_KEY=your_dev_api_key_here
PAGEINDEX_BASE_URL=https://api.pageindex.ai
PAGEINDEX_TIMEOUT=30

# ============================================================================
# RETRIEVAL SETTINGS
# ============================================================================
LLM_TREE_SEARCH_ENABLED=true
HYBRID_TREE_SEARCH_THRESHOLD=0.15
NODE_SPAN_TOKEN_THRESHOLD=2000

# ============================================================================
# REACT CONTROLLER
# ============================================================================
CONTROLLER_MODEL=mistral-7b-instruct
CONTROLLER_TEMPERATURE=0.1
CONTROLLER_MAX_ITERATIONS=10
REACT_USE_LLM_CONTROLLER=false
REACT_SHADOW_MODE=false
REACT_FALLBACK_ENABLED=true
REACT_AB_TEST_RATIO=0.0

# ============================================================================
# GEPA / Prompt Optimization
# ============================================================================
GEPA_ENABLED=false
GEPA_AUTO_MODE=medium
GEPA_MAX_ITERATIONS=150
GEPA_TARGET_SCORE=0.8
GEPA_REFLECTION_MODEL=gpt-4o
GEPA_TASK_MODEL=gpt-4o-mini
GEPA_DATASET_PATH=tests/data/cases

# ============================================================================
# SAFETY (Reduced for faster dev iteration)
# ============================================================================
TEMPERATURE_SCALING_ENABLED=false
SELF_CONSISTENCY_ENABLED=false
SELF_CONSISTENCY_K=1
CONFORMAL_ALPHA=0.1

# ============================================================================
# PERFORMANCE (Relaxed for development)
# ============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
TARGET_P50_LATENCY=10.0
TARGET_P95_LATENCY=30.0

# ============================================================================
# OBSERVABILITY
# ============================================================================
METRICS_ENABLED=false
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=1.0
